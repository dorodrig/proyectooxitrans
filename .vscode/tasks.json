			"label": "Build Verificación Final",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build"
		},
		{
			"label": "Verificación Final Producción",
			"type": "shell",
			"command": "node",
			"args": [
				"tests/production-check.mjs"
			],
			"group": "test"
		},
		{
			"label": "Simulación Realista Empleados",
			"type": "shell",
			"command": "node",
			"args": [
				"tests/simulacion-empleados-realista.mjs"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"problemMatcher": []
