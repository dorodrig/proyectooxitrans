{
  "name": "Control de Acceso OXITRANS",
  "short_name": "OXITRANS Access",
  "description": "Sistema de Control de Acceso de Empleados para OXITRANS S.A.S",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1e40af",
  "theme_color": "#1e40af",
  "orientation": "portrait-primary",
  "scope": "/",
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "/vite.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "/pwa-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/pwa-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "categories": ["business", "productivity"],
  "lang": "es",
  "dir": "ltr",
  "permissions": ["geolocation"],
  "features": [
    {
      "name": "geolocation",
      "required": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css", "*.png", "*.svg", "*.json"],
      "matches": ["*://localhost:*/*", "*://127.0.0.1:*/*"]
    }
  ]
}
